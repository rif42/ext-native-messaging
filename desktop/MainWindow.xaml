<Window x:Class="desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:desktop"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="150"
        Width="350">
    <Grid>
        <TextBlock HorizontalAlignment="Left"
                   Margin="20,10,0,0"
                   TextWrapping="Wrap"
                   Text="Send Input"
                   VerticalAlignment="Top" />
        <TextBox HorizontalAlignment="Left"
                 Name="textInput"
                 Margin="120,10,0,0"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="100"
                 MaxLength="100" />
        <Button HorizontalAlignment="Left"
                Name="sendButton"
                Margin="250,10,0,0"
                VerticalAlignment="Top"
                Click="SendInput"> Send! </Button>
        <TextBlock HorizontalAlignment="Left"
                   Margin="20,40,0,0"
                   TextWrapping="Wrap"
                   Text="Receive Input"
                   VerticalAlignment="Top" />
        <TextBlock HorizontalAlignment="Left"
                   Name="receiveTextBox"
                   Margin="120,40,0,0"
                   TextWrapping="Wrap"
                   VerticalAlignment="Top"
                   Text="receiveTextBox" />
        <TextBlock HorizontalAlignment="Left"
                   Name="statusTextBox"
                   Margin="20,70,0,0"
                   TextWrapping="Wrap"
                   Text="Status: "
                   VerticalAlignment="Top" />
    </Grid>
</Window>